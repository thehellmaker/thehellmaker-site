---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/jpeg" href="/ironman.jpg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- SEO Meta Tags -->
<meta name="keywords" content="ML engineering, distributed systems, machine learning infrastructure, ML systems design, model deployment, ML ops, model serving, ML pipeline, model monitoring, feature engineering, data pipeline, model optimization, ML architecture, distributed training, model inference, ML platform, model versioning, ML workflow, model registry, ML observability, model performance, ML scalability, distributed computing, system design, database engineering, backend development, technical blog, database optimization, system architecture, AI infrastructure, ML inference, model training, distributed ML, ML system design, model deployment patterns, ML infrastructure, model lifecycle management, ML data management, model evaluation, ML testing, model validation, ML production, model serving optimization" />
<meta name="author" content="Akash Ashok" />
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
<meta name="language" content="English" />
<meta name="revisit-after" content="7 days" />
<meta name="theme-color" content="#ffffff" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="format-detection" content="telephone=no" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title} | ML Engineering & Distributed Systems Blog</title>
<meta name="title" content={`${title} | ML Engineering & Distributed Systems Blog`} />
<meta name="description" content={`${description} | Expert insights on ML engineering, distributed systems, and production infrastructure. Covering model deployment, ML ops, and scalable system architecture.`} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={`${title} | ML Engineering & Distributed Systems Blog`} />
<meta property="og:description" content={`${description} | Expert insights on ML engineering, distributed systems, and production infrastructure. Covering model deployment, ML ops, and scalable system architecture.`} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content="ML Engineering & Distributed Systems Blog" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={`${title} | ML Engineering & Distributed Systems Blog`} />
<meta property="twitter:description" content={`${description} | Expert insights on ML engineering, distributed systems, and production infrastructure. Covering model deployment, ML ops, and scalable system architecture.`} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
