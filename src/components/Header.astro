<style>
	header {
		padding: 0 1em;
		background: white;
		border-bottom: 1px solid #ddd;
	}
	h2 {
		margin: 0;
		font-size: 1.5em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 1280px;
		max-width: calc(100%);
		margin: auto;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.site-title {
		font-weight: bold;
		font-size: 1.5em;
	}
	.site-title a {
		padding: 1em 0em;
	}
</style>
