---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="site-title"><a href="/">{SITE_TITLE}</a></div>
		<button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
		</button>
		<div class="nav-content">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/paper-shelf">Paper Shelf</HeaderLink>
			</div>
			<div class="social-links">
				<a href="https://github.com/thehellmaker" target="_blank">
					<span class="sr-only">GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="25" height="25"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
				<a href="https://x.com/thehellmaker" target="_blank">
					<span class="sr-only">X (formerly Twitter)</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="25" height="25">
						<path
							fill="currentColor"
							d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
						></path>
					</svg>
				</a>
				<a href="mailto:thehellmaker@gmail.com" target="_blank">
					<span class="sr-only">Email</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="25" height="25"
						><path
							fill="currentColor"
							d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
						></path></svg
					>
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	const hamburger = document.querySelector('.hamburger');
	const navContent = document.querySelector('.nav-content');

	hamburger?.addEventListener('click', () => {
		const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
		hamburger.setAttribute('aria-expanded', String(!isExpanded));
		hamburger.classList.toggle('active');
		navContent?.classList.toggle('active');
	});

	// Close menu when clicking a link
	const navLinks = document.querySelectorAll('.internal-links a');
	navLinks.forEach(link => {
		link.addEventListener('click', () => {
			hamburger?.classList.remove('active');
			navContent?.classList.remove('active');
			hamburger?.setAttribute('aria-expanded', 'false');
		});
	});
</script>
<style>
	header {
		background: white;
		border-bottom: 1px solid #ddd;
	}
	h2 {
		margin: 0;
		font-size: 1.5em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 1280px;
		max-width: 100%;
		margin: auto;
		padding: 0 1em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.site-title {
		font-weight: bold;
		font-size: 1.5em;
	}
	.site-title a {
		padding: 1em 0em;
	}

	/* Hamburger menu */
	.hamburger {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
		z-index: 1000;
	}

	.hamburger-line {
		width: 25px;
		height: 3px;
		background-color: rgb(var(--black));
		transition: all 0.3s ease;
	}

	.hamburger.active .hamburger-line:nth-child(1) {
		transform: translateY(7px) rotate(45deg);
	}

	.hamburger.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.hamburger.active .hamburger-line:nth-child(3) {
		transform: translateY(-7px) rotate(-45deg);
	}

	.nav-content {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	.internal-links {
		display: flex;
		align-items: center;
	}

	/* Mobile styles */
	@media (max-width: 720px) {
		nav {
			padding: 1em 1em;
		}

		.hamburger {
			display: flex;
		}

		.nav-content {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: white;
			flex-direction: column;
			align-items: flex-start;
			padding: 0.75em 1em 1.5em 1em;
			border-bottom: 1px solid #ddd;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.nav-content.active {
			display: flex;
		}

		.internal-links {
			flex-direction: column;
			align-items: flex-start;
			width: 100%;
		}

		.internal-links a {
			width: 100%;
			padding: 0.75em 0 0.75em 1em;
			border-bottom: none;
			border-left: 4px solid transparent;
		}

		.internal-links a.active {
			border-left-color: var(--accent);
			border-bottom-color: transparent;
		}

		.site-title {
			font-size: 1.4em;
		}

		header {
			position: relative;
		}
	}
</style>
